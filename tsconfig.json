{
  "compilerOptions": {
    "target": "ESNext", // Use modern JavaScript syntax
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true, // Enable support for JavaScript (.js and .jsx)
    "jsx": "react-jsx", // Support React's JSX transform
    "moduleResolution": "node",
    "strict": true, // Enforces strict type checking
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"], // Include files from the src/ folder
  "exclude": ["node_modules"]
}
